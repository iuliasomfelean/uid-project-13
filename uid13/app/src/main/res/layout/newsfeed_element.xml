<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="195dp">

        <TextView
            android:id="@+id/posted_by_user"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/posted_by_user_picture"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/posted_at_time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/posted_by_user"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />

        <ImageView
            android:id="@+id/posted_by_user_picture"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/posted_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/posted_by_user_picture"
            android:layout_toRightOf="@+id/posted_by_user_picture"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""/>

    </RelativeLayout>


</LinearLayout>
